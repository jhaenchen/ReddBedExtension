{
  "name": "ReddBed",
  "description": "Automatically generate web-ready or reddit-ready ReddBeds.",
  "version": "1.0",
  "permissions": [
    "tabs", "*://*/r/comments*"
  ],
  "icons": { "16": "icon.png",
             "48": "icon.png",
            "128": "icon.png" },
  "browser_action": {
      "default_title": "Generate ReddBed",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}
